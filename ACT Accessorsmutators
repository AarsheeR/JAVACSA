package javaPack;

import java.util.Scanner;

public class MainBank {

	static Scanner allinput = new Scanner(System.in);
	public static void main(String[] args) 
	{
		//Ask user for bank information
		GetInfo();
	}
	
	public static void GetInfo()
	{
		System.out.print("Enter account holder name: ");
		String user = allinput.nextLine();
		if (user.equals(""))
		{
			System.out.println("Please enter a name.");
			GetInfo();
			return;
		}
		System.out.print("Enter account balance: ");
		String strbalance = allinput.nextLine();
		if (strbalance.equals("")) {
		    System.out.println("Invalid Input. Restarting process...");
		    GetInfo();
		    return;
		} 
		
		Double balance = Double.parseDouble(strbalance);

		//Object and constructor creation 
		DisplayMain(user,balance);
	}
	
	static void DisplayMain(String holder, double balance)
	{
		//Set the mutators to set the data 
		BankAccount myAccount = new BankAccount();
		myAccount.setAccountHolder(holder);
		myAccount.setBalance(balance);
	
		System.out.println(myAccount.getAccountHolder());
		System.out.println("Balance: $" + myAccount.getBalance());
		allinput.nextLine();
		GetInfo();
		return;
	} 

}


package javaPack;

public class BankAccount {

	private String accountHolder;
	private double accountBalance;
	
	//ACCESSORS
	//These methods retrieve, read, or get the information 
	//All accessors begin with the word "get"
	public String getAccountHolder()
	{
		return accountHolder;
	}
	public double getBalance()
	{
		return accountBalance;
	}
	
	//MUTATROS
	//These methods modify, manipulate, change the information to suite the program's needs
	//All mutators begin with the word "set"
	public void setAccountHolder(String name)
	{
		this.accountHolder = "Greetings, " + name + " I am happy to assist you!";
	}
	public void setBalance(double money)
	{
		if (money >= 0)
		{
			this.accountBalance = money;
		}
		else
		{
			System.out.println("Error! There is an issue with the transaction!");
		}
	}
}
