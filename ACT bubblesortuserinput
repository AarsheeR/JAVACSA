package javaPack;
//main class that initializes the program and displays the output

import java.util.Scanner;


public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Initialize();
	}
	
	public static void Initialize() {
		BubbleSortActivity array = new BubbleSortActivity(); //constructor
        
		int sortedarray[] = array.BubSort(); // call method that sorts the array

        // Output result
        for (int n = 0; n < sortedarray.length; n++) {
            System.out.print(sortedarray[n] + " ");
        }
        Restart();
	}

	public static void Restart() {
		Scanner input = new Scanner(System.in);
		
		System.out.print("\nWould you like to try again? Y/N: ");
		String yesno = input.nextLine();
		
		yesno = yesno.toUpperCase();
		if (yesno.equals("YES") || yesno.equals("Y"))
		{
			Initialize();
		}
		else if (yesno.equals("NO") || yesno.equals("N")){
			System.out.println("Thank you. Good Bye.");
		}
		else
		{ 
			System.out.println("Please input yes or no.");
			Restart();
		}
	}
}



package javaPack;

import java.util.Scanner;

// BubbleSortActivity class does the sorting of the array and returns the sorted array to be displayed
public class BubbleSortActivity {

	Scanner input = new Scanner(System.in);
	
    public int[] BubSort() {

    		int numhowmany = 0;
    	
		// keep asking until valid
        while (true) {
        		System.out.print("How many numbers would you like to be sorted? Please enter an integer from 2 to 15: "); 
        		String howmany = input.nextLine();

            if (CheckInt(howmany)) {
                numhowmany = Integer.parseInt(howmany);

                if (numhowmany >= 2 && numhowmany <= 15) {
                    break;
                }
                else {
                    System.out.println("Number must be between 2 and 15.");
                }
            }
        }
    		
    		
    		int arr[] = ArrayInput(numhowmany);
    		
    		// THE ALGORITHIM
        for (int i = 0; i < arr.length - 1; i++) {
            for (int j = 0; j < arr.length - i - 1; j++) {
                // Task: Compare and Swap
                if (arr[j] > arr[j + 1]) {
                    int temp = arr[j];
                    arr[j] = arr[j + 1];
                    arr[j + 1] = temp;
                }
            }
        }
        return arr;
    }
    
    public int[] ArrayInput(int count) {
    		// creating the array using user input
    		int[] array = new int[count];
    		for (int i = 0; i < count; i++) {
			while (true) {

                System.out.print("Enter integer #" + (i + 1) + ": ");
                String arrcontent = input.nextLine();

                if (CheckInt(arrcontent)) {
                    array[i] = Integer.parseInt(arrcontent);
                    break;
                }
            }
        }

        return array;
    }
    
    
    public boolean CheckInt(String num) {
    	
    	num = num.trim();
    	int numlen = num.length();
    	// check if the input was empty
    	if (numlen == 0) {
    		System.out.println("Please enter an integer.");
    		return false;
    	}
    	
    	char[] numarray = new char[numlen]; //set an array to the length of the input 
    	for (int i = 0; i < numlen; i++) {
    		numarray[i] = num.charAt(i);
    		if ((int)numarray[i] < 48 || (int)numarray[i] > 57) {
    			System.out.println("Please input an integer.");
    			return false;
    		}
    	}
    	return true;
    }
}
