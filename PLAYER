collectinfo : 
import java.util.Scanner;

public class CollectInfo {

    Scanner input = new Scanner(System.in);

    public CollectInfo() {
        allInfo();
    }

    public void allInfo() {

        System.out.println("Enter information for Player 3:");

        System.out.print("Name: ");
        String name = input.nextLine();

        System.out.print("X coordinate: ");
        int x = input.nextInt();

        System.out.print("Y coordinate: ");
        int y = input.nextInt();

        System.out.print("Z coordinate: ");
        int z = input.nextInt();

        System.out.print("Health: ");
        int hp = input.nextInt();

        System.out.print("Direction (1â€“6): ");
        int dir = input.nextInt();

        Player p1 = new Player();
        Player p2 = new Player("Enemy", 5, 2, -3);
        Player p3 = new Player(name, x, y, z, hp, dir);

        System.out.println("\nInitial Players:");
        System.out.println(p1);
        System.out.println(p2);
        System.out.println(p3);

        System.out.println("\nDistances:");
        System.out.println("p1 to p2: " + p1.getDistance(p2));
        System.out.println("p1 to p3: " + p1.getDistance(p3));
        System.out.println("p2 to p3: " + p2.getDistance(p3));

        System.out.println("\nMoving players...");
        p1.move(1, 3); // north
        p2.move(5, 4); // east
        p3.teleport(p1);

        System.out.println("\nAfter movement:");
        System.out.println(p1);
        System.out.println(p2);
        System.out.println(p3);

        System.out.println("\nAttacking...");
        p1.attack(p2, 6);

        System.out.println("\nAfter attack:");
        System.out.println(p1);
        System.out.println(p2);
    }
}

player : 

package javaPack;

public class Player 
{

    //  Variables 
    private static int numPlayers = 0;
    private int x;
    private int y;
    private int z;
    private int direction;
    private int hp;
    private String name;

    //  Constructors 
    public Player() {
    }

    public Player(String name, int x, int y, int z) {
    }

    public Player(String name, int x, int y, int z, int health, int direction) {
    }

    //  Accessors 
    public int getNumPlayers() {
        return numPlayers;
    }

    public String getName() {
        return "";
    }

    public int getX() {
        return 0;
    }

    public int getY() {
        return 0;
    }

    public int getZ() {
        return 0;
    }

    public int getHp() {
        return 0;
    }

    public int getDirection() {
        return 0;
    }

    public String toString() {
        return "";
    }

    //  Mutators 
    public void setHp(int hp) {
    }

    public void setDirection(int direction) {
    }

    public void move(int direction, int units) {
    }

    public void teleport(int x, int y, int z) {
    }

    public void teleport(Player player) {
    }

    public void attack(Player player, int damage) {
    }

    //  Additional Methods 
    public double getDistance(int x, int y, int z) {
        return 0.0;
    }

    public double getDistance(Player player) {
        return 0.0;
    }
}
