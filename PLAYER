main:

package javaPack;

import java.util.Scanner;

public class Main {

	private static String choice = "Y";
	static Scanner input = new Scanner(System.in);
	
    public static void main(String[] args) {
    		
        
        while (true) {

         
            new CollectInfo();   // run once

            Restart();
            
        }

    }
    public static void Restart()
    {
    	System.out.print("\nPlay another round? (Y/yes/N/no): ");
        choice = input.nextLine().toUpperCase();

        if (choice.equals("Y") || choice.equals("YES")) {
            return;   // run again
        }
        else if (choice.equals("N") || choice.equals("NO")) {
        		System.out.println("Program ended.");   
        		System.exit(0); //exit out of program if no
        }
        else {
            System.out.println("Please enter Y or N:");
            Restart();
        }
 
    }
}


collectinfo : 
package javaPack;

import java.util.Scanner;

public class CollectInfo {
    Scanner input = new Scanner(System.in);

    public CollectInfo() {
        allInfo();
    }

    public String askInfo(String question)
    {
        System.out.print(question);
        String info = input.nextLine();
		if (info.equals("")) {
		    System.out.println("Invalid Input. Restarting process...\n~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
		    return askInfo(question);
		} 
		else
		{
			return info;
		}
    }
    
    public void allInfo() {
		//default (first) player creation
    	Player p1 = new Player();
    	System.out.println(p1);
    	System.out.println("\nDefault Player created...\n--------------------------------");
    	
    	//second player creation using parameters 
    	System.out.println("Enter information for Player 2:");
        String name2 = askInfo("Name: ");
       
        String strx2 = askInfo("X coordinate (only input integers): ");
		int x2 = Integer.parseInt(strx2);

		
        String stry2 = askInfo("Y coordinate (only input integers): ");
		int y2 = Integer.parseInt(stry2);
		
	
        String strz2 = askInfo("Z coordinate (only input integers): ");
        int z2 = Integer.parseInt(strz2);    
        
	    
        Player p2 = new Player(name2, x2, y2, z2);
	    	
        System.out.println(p2);
        System.out.println("\nSecond Player created...\n--------------------------------");
        
        //third players creation using parameters
        System.out.println("Enter information for Player 3:");
        String name3 = askInfo("Name: ");

        
        String strx3 = askInfo("X coordinate (only input integers): ");
		int x3 = Integer.parseInt(strx3);


        String stry3 = askInfo("Y coordinate (only input integers): ");
		int y3 = Integer.parseInt(stry3);
		
	
        String strz3 = askInfo("Z coordinate (only input integers): ");
        int z3 = Integer.parseInt(strz3);        


        String strhp = askInfo("Health (only input integers): ");
        int hp = Integer.parseInt(strhp);

        
        String strdir = askInfo("Direction (only input the integers between 1-6 ): ");
        int dir = Integer.parseInt(strdir);

	
        Player p3 = new Player(name3, x3, y3, z3, hp, dir);

        //accessors and mutators used 
        System.out.println("\nCurrent Players:");
        System.out.println(p1.toString());
        System.out.println(p2.toString());
        System.out.println(p3.toString());

        System.out.println("\nDistances:");
        System.out.println(p1.getName() + "(Default Player) to " + p2.getName() + "(Player 2): " + p1.getDistance(p2));
        System.out.println(p1.getName() + "(Default Player) to " + p3.getName() + "(Player 3): " + p1.getDistance(p3));
        System.out.println(p2.getName() + "(Player 2) to " + p3.getName() + "(Player 3): " + p2.getDistance(p3));

        System.out.println("\nMoving players...");
        p1.move(1, 3); // north
        p2.move(5, 4); // east
        p3.teleport(p1);
        
        System.out.println(p1.getName() + " is moving north 3 units.");
        System.out.println(p2.getName() + " is moving east 4 units.");
        System.out.println(p3.getName() + " is teleporting to " + p1.getName() + ".");
        
        System.out.println("\nAfter movement:");
        System.out.println("Name: " + p1.getName() + "\nCoordinates: X " + p1.getX() + " Y " + p1.getY() + " Z " + p1.getZ() + 
        		"\nDirection: " + p1.getDirection());
        System.out.println("Name: " + p2.getName() + "\nCoordinates: X " + p2.getX() + " Y " + p2.getY() + " Z " + p2.getZ()+ 
        		"\nDirection: " + p2.getDirection());
        System.out.println("Name: " + p3.getName() + "\nCoordinates: X " + p3.getX() + " Y " + p3.getY() + " Z " + p3.getZ()+ 
        		"\nDirection: " + p3.getDirection());

        System.out.println("\nAttacking...");
        p1.attack(p2, 6);

        System.out.println(p1.getName() + " is attempting to deal 6 units of damage upon " + p2.getName() + ".");
        
        System.out.println("\nAfter attack:");
        System.out.println(p1.toString());
        System.out.println(p2.toString());
        System.out.println(p3.toString());
    }
}
    



player : 

package javaPack;

public class Player 
{
	
	// Variables
    private static int numPlayers = 0;
    private int x;
    private int y;
    private int z;
    private int direction;
    private int hp;
    private String name;


    // Constructors 
    public Player() {
        numPlayers++;

        this.name = "P" + numPlayers;
        this.x = 0;
        this.y = 0;
        this.z = 0;
        this.hp = 20;
        this.direction = 1; // North
    }

    public Player(String name, int x, int y, int z) {
    	 numPlayers++;

         this.name = name;
         this.x = x;
         this.y = y;
         this.z = z;
         this.hp = 20;
         this.direction = 1; // North
    }

    public Player(String name, int x, int y, int z, int health, int direction) {
        numPlayers++;

        this.name = name;
        this.x = x;
        this.y = y;
        this.z = z;

        if (health < 0) {
            this.hp = 0;
        } else {
            this.hp = health;
        }

        if (direction < 1 || direction > 6) {
            this.direction = 1;
        } else {
            this.direction = direction;
        }
    }

    // Accessors
    public int getNumPlayers() {
        return numPlayers;
    }

    public String getName() {
        return name;
    }

    public int getX() {
        return x;
    }

    public int getY() {
        return y;
    }

    public int getZ() {
        return z;
    }

    public int getHp() {
        return hp;
    }

    public int getDirection() {
        return direction;
    }

    public String toString() {
    	return "Name: " + name +
                "\nHealth: " + hp +
                "\nCoordinates: X " + x + " Y " + y + " Z " + z +
                "\nDirection: " + direction;
    }

    //  Mutators
    public void setHp(int hp) {
    		if (hp < 0) {
            this.hp = 0;
        } else {
            this.hp = hp;
        }
    }

    public void setDirection(int direction) {
    		if (direction >= 1 && direction <= 6) {
            this.direction = direction;
        }
    }

    public void move(int direction, int units) {
        if (direction == 1) {          // North
            x = x + units;
        } else if (direction == 2) {   // South
            x = x - units;
        } else if (direction == 3) {   // Up
            y = y + units;
        } else if (direction == 4) {   // Down
            y = y - units;
        } else if (direction == 5) {   // East
            z = z + units;
        } else if (direction == 6) {   // West
            z = z - units;
        }
    }

    public void teleport(int x, int y, int z) {
        this.x = x;
        this.y = y;
        this.z = z;
    }

    public void teleport(Player player) {
        this.x = player.x;
        this.y = player.y;
        this.z = player.z;
    }

    public void attack(Player player, int damage) {
        if (damage < 0) {
            return;
        }

        player.hp = player.hp - damage;

        if (player.hp < 0) {
            player.hp = 0;
        }

        this.hp = this.hp + (damage / 2);
    }

    // Additional Methods 
    public double getDistance(int x, int y, int z) {
        int dx = this.x - x;
        int dy = this.y - y;
        int dz = this.z - z;

        double dist = Math.sqrt(dx * dx + dy * dy + dz * dz);
        return  (int)(dist * 100 + 0.5) / 100.0;
    }

    public double getDistance(Player player) {
        int dx = this.x - player.x;
        int dy = this.y - player.y;
        int dz = this.z - player.z;

        double dist = Math.sqrt(dx * dx + dy * dy + dz * dz);
        return  (int)(dist * 100 + 0.5) / 100.0;
    }
}
