airplane 
package javaPack;

public class Airplane 
{
	private String callsign; 
	private double distance;
	private int bearing;
	private int altitude;
	
	public Airplane(String cs, double dist, int dir, int alt)
	{
		this.callsign = cs;
		this.distance = dist;
		this.bearing = dir;
		this.altitude = alt;
	}
	
	public int getAlt()
	{
		return altitude;
	}

}


