//Calculate class -- asks about the grades and calculates average
package javaPack;

import java.util.Scanner;

public class Calculate {
	
	static Scanner allinput = new Scanner(System.in);
	private int numgrade;
	
	public Calculate(float numgrade)
	{
		this.numgrade = (int) numgrade;
		AskGrades();
	}
	
	public void AskGrades() {
        float totalPercent = 0;
        float totalGPA = 0;
        int i = 0;

        while (i < numgrade) { //Ask for the desired amount of grades
            System.out.print("Enter grade #" + (i + 1) + " (0-100) : ");
            float grade = allinput.nextFloat();

            if (grade < 0 || grade > 100) {
                System.out.println("Invalid grade! Must be between 0 and 100.");
                
            }
            else
            {
            		i++;
            		float gpa = ConvertToGPA(grade);
	            String letter = ConvertToLetter(grade);
	
	            System.out.println("Grade: " + grade + " | GPA: " + gpa + " | Letter: " + letter);
	            totalPercent += grade; //Add to the sum
	            totalGPA += gpa;
            }

            
            
        }

        float avgPercent = totalPercent / numgrade; //Calculate the average
        avgPercent = (int)(avgPercent * 100 + 0.5f) / 100.0f;
        float avgGPA = totalGPA / numgrade;
        avgGPA = (int)(avgGPA * 100 + 0.5f) / 100.0f;
        String finalLetter = ConvertToLetter(avgPercent);

        System.out.println("\nFINAL RESULTS");
        System.out.println("Average (0–100): " + avgPercent);
        System.out.println("Average GPA (1–4): " + avgGPA);
        System.out.println("Average Letter Grade: " + finalLetter);
    }

    // Convert numeric grade to GPA 1–4
    public float ConvertToGPA(float grade) {
    		return (grade / 100) * 4; // ratio of grade/100 = x/4
    }

    // Convert numeric grade to letter using switch-like structure
    public String ConvertToLetter(float grade) {
    	int category;

        if (grade >= 95 && grade <= 100)
            category = 1;   // A
        else if (grade >= 85 && grade < 95)
            category = 2;   // B
        else if (grade >= 75 && grade < 85)
            category = 3;   // C
        else if (grade >= 65 && grade < 75)
            category = 4;   // D
        else if (grade >= 0 && grade < 65)
            category = 5;   // F
        else
            category = 0;   // Invalid

        switch (category) {
            case 1: return "A";
            case 2: return "B";
            case 3: return "C";
            case 4: return "D";
            case 5: return "F";
            default: return "Invalid";
        }
    }

}


//CollectInfo class -- asks how many grades will be averaged
package javaPack;

import java.util.Scanner;

public class CollectInfo {

	static Scanner allinput = new Scanner(System.in);
	public CollectInfo()
	{
		AskInfo();
	}
	
	public void AskInfo()
	{
		float numgrades;
		boolean yesorno;
		
		System.out.print("How many grades will you be averaging? 0-100: "); //Can average a max of 100 grades
		numgrades = allinput.nextFloat();
		yesorno = CheckNum(numgrades);
		if (yesorno)
		{
			Calculate average = new Calculate(numgrades);
		}
		else
		{
			System.out.println("Please input a whole number between 0-100!");
			AskInfo();
		}
	}
	
	public boolean CheckNum(float gradenum)
	{
		boolean boolstate = true;
		
		float isyes = gradenum % 1;
		
		if (isyes > 0)
		{
			return false; //Not an integer 
		}
		else 
		{
			if (gradenum < 1 || gradenum >= 100)
			{
				return false; //Not a number between 1-100
			}
			else
			{
				return true; //Meets criteria
			}
		}
		
	}
}



